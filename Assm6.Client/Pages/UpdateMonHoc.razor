@page "/updateMonhoc/{id}"

<h2>Update Product Form</h2>

@if (_monhoc != null)
{
    @if (ShowAuthError)
    {
        <div class="alert alert-danger" role="alert">
            @Error
        </div>
    }
    <EditForm Model="_monhoc" OnValidSubmit="Update" class="card card-body bg-light mt-5">
        <DataAnnotationsValidator />
        <div class="form-group row">
            <label for="name" class="col-md-2 col-form-label">Tên Môn Học:</label>
            <div class="col-md-10">
                <InputText id="name" class="form-control" @bind-Value="_monhoc.TenMonhoc" />
                <ValidationMessage For="@(() => _monhoc.TenMonhoc)" />
            </div>
        </div>
        <div class="form-group row">
            <label for="image" class="col-md-2 col-form-label">Image:</label>
            <div class="col-md-10">
                <ImageUpload ImgUrl="@_monhoc.ImageUrl" OnChange="AssignImageUrl" />
            </div>
        </div>
        <div class="row pt-2">
            <div class="col-md-6 text-center">
                <button type="submit" class="btn btn-danger">Sửa</button>
            </div>
            <div class="col-md-6 text-center">
                <a href="/monhocs" class="btn btn-primary">Quay Lại</a>
            </div>
        </div>
    </EditForm>

}